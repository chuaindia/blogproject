<h1> Post </h1>
<p> Show all posts for Malay</p>

<div>
    <section class="main_post">

    <div>
        <img src="<%= @user.Photo %>" alt="image">
    </div>

        <div>
            <h2>
                <%= @user.Name%>
            </h2>
            <p class="self-end text-xs">
                Number of posts: <%= @user.PostsCounter || 0%>
            </p>
        </div> 
        <div>
            <% @user.Bio %>
        </div>
        
    </section>

    <section>
        <% @user.posts.each do |post| %>
            <%= render parial: 'post', locals: {post: post} %>
        <% end %>
    </section>
</div>